.container
  .row
    .col-lg-offset-3.col-lg-6.sign-in
      %img.sign-in-image.center-block{:alt => "Crabazon Logo", :src => "/assets/logo-tagline-712029fa759a9065f629c28253e5552ce5d184e157d96ba0efe3191d3449c447.svg"}/
      .facebook-login.text-center
        %a{:href => "/users/auth/facebook"}
          %button.btn.btn-primary
            %i.fa.fa-facebook>
            Sign up with Facebook
      .sign-up-separator.text-center
        %h1 or
      = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f|
        = devise_error_messages!
        .form-group.row
          .col-lg-6
            = f.label :first_name
            %br/
            = f.text_field :first_name, autofocus: true, class: 'form-control'
          .col-lg-6
            = f.label :last_name
            %br/
            = f.text_field :last_name, class: 'form-control'
        .form-group
          = f.label :street_address
          %br/
          = f.text_field :street_address, class: 'form-control'
        .form-group.row
          .col-lg-7
            = f.label :city
            %br/
            = f.text_field :city, class: 'form-control'
          .col-lg-2
            = f.label :state
            %br/
            = f.text_field :state, class: 'form-control'
          .col-lg-3
            = f.label :zip_code
            %br/
            = f.text_field :zip_code, class: 'form-control'
        .form-group.row
          .col-lg-6
            = f.label :email
            %br/
            = f.email_field :email, class: 'form-control'
          .col-lg-6
            = f.label :cell_phone
            %br/
            = f.text_field :cell_phone, class: 'form-control'
        .form-group.row
          .col-lg-6
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off", class: 'form-control'
          .col-lg-6
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
        .text-center
          = f.submit "Sign Up", class: 'btn btn-success', id: 'sign-in-button'
      = render "users/shared/links"
